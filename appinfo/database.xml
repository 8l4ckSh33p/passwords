<database>
	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>
	<charset>utf8</charset>
	<table>
		<name>*dbprefix*passwords</name>
		<declaration>
			<field>
				<name>id</name>
				<type>integer</type>
				<notnull>true</notnull>
				<autoincrement>true</autoincrement>
				<unsigned>true</unsigned>
				<primary>true</primary>
				<length>8</length>
			</field>
			<field>
				<name>user_id</name>
				<type>text</type>
				<length>500</length>
				<default></default>
				<notnull>true</notnull>
			</field>
			<field>
				<name>loginname</name>
				<type>text</type>
				<length>500</length>
				<default></default>
				<notnull>true</notnull>
			</field>
			<field>
				<name>website</name>
				<type>text</type>
				<length>500</length>
				<default></default>
				<notnull>true</notnull>
			</field>
			<field>
				<name>address</name>
				<type>text</type>
				<length>1000</length>
				<default></default>
				<notnull>false</notnull>
			</field>
			<field>
				<name>pass</name>
				<type>blob</type>
				<notnull>true</notnull>
			</field>
			<field>
				<name>notes</name>
				<type>blob</type>
				<notnull>false</notnull>
			</field>
			<field>
				<name>creation_date</name>
				<type>date</type>
				<notnull>true</notnull>
			</field>
		</declaration>
	</table>
</database>
